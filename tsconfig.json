{
  "extends": "hitoka/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "build",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
